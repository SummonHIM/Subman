{% for share in group.share %}
    {% if not loop.first %}
        <hr class="mt-4 mb-4">
    {% endif %}


    <div class="row align-items-center mb-3">
        <label class="col-form-label">{{ share.suggestion_name }}</label>
        <div class="col-md">
            <input class="form-control" type="text" value="{{ share.manage }}" readonly>
        </div>
        <div class="btn-group col-md-3">
            <a class="btn btn-outline-primary" href="{{ share.manage }}" target="_blank">访问</a>
        </div>
    </div>

    <div class="row align-items-center mb-3">
        <label class="col-form-label">账号</label>
        <div class="col-md">
            <input class="form-control" type="text" id="share-account-{{ loop.index }}" value="{{ share.account }}" readonly>
        </div>
        <div class="btn-group col-md-3">
            <button type="button" class="btn btn-outline-primary" onclick="copyTextToClipboard(this)" data-copyid="share-account-{{ loop.index }}">复制</a>
        </div>
    </div>

    <div class="row align-items-center mb-3">
    <label class="col-form-label">密码</label>
    <div class="col-md">
        <div class="input-group">
            <input class="form-control" type="password" id="share-password-{{ loop.index }}" value="{{ share.password }}" readonly>
            <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility(this)" data-passid="share-password-{{ loop.index }}" data-eyeid="share-password-eye-{{ loop.index }}">
                <ion-icon name="eye-off" id="share-password-eye-{{ loop.index }}"></ion-icon>
            </button>
        </div>
    </div>
    <div class="btn-group col-md-3">
        <button type="button" class="btn btn-outline-primary" onclick="copyTextToClipboard(this)" data-copyid="share-password-{{ loop.index }}">复制</a>
    </div>
</div>
{% else %}
    <div class="alert alert-warning mb-0" role="alert">暂无可用的共享账号。</div>
{% endfor %}
